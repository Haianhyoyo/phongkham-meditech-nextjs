generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  emailVerified DateTime?
  image         String?
  role          String    @default("USER")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  logs          Log[]
  posts         Post[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Service {
  id             String   @id @default(cuid())
  title          String
  slug           String   @unique
  description    String?
  content        String?
  image          String?
  icon           String?
  price          String?
  duration       String?
  category       String?
  type           String?
  isActive       Boolean  @default(true)
  order          Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  candidates     String?
  process        String?
  faq            String?
  realImages     String?
  profIndication String?
  doctorAnalysis String?
  risks          String?
  recoveryTime   String?
}

model Doctor {
  id             String   @id @default(cuid())
  name           String
  role           String
  image          String?
  specialty      String?
  description    String?
  qualifications String?
  experience     String?
  isActive       Boolean  @default(true)
  order          Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  metadata       String?
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  summary     String?
  content     String?
  image       String?
  category    String?
  isPublished Boolean  @default(false)
  authorId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      User?    @relation(fields: [authorId], references: [id])
}

model Promotion {
  id          String   @id @default(cuid())
  title       String
  description String?
  discount    String?
  code        String?
  expiry      String?
  image       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  metadata    String?
}

model Review {
  id           String   @id @default(cuid())
  customerName String
  rating       Int      @default(5)
  content      String?
  service      String?
  image        String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
}

model Booking {
  id        String   @id @default(cuid())
  name      String
  phone     String
  service   String
  message   String?
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String?
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String?
  group     String?  @default("general")
  updatedAt DateTime @updatedAt
}

model Showcase {
  id          String   @id @default(cuid())
  type        String
  title       String?
  description String?
  image       String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  link        String?
  metadata    String?
}

model Log {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  details   String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}
